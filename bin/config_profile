#!/usr/bin/env bash

usage() {
    cli_name=${0##*/}
    echo "
${0##*/}
usage: $cli_name [options]
options:
    -n | --name         Taking actions on profile.
                        If There is no profile, create one in etc/.

    -h | --help         Help.       
            
commands:
    set          Set ENV variables for profile.
"
    exit 1
}

profile() {
    set -e
    export __profile__=$1
    $__log__ -i "Taking action on $__profile__"
}

setEnv() {
    env=$__profile_dir__/$__profile__/.env
    if [ ! -d "$__profile_dir__/$__profile__" ]; then
        mkdir $__profile_dir__/$__profile__
    fi

    VARIBABLES=$@
    for VARIBABLE in ${VARIBABLES}; do
        echo "$VARIBABLE" >> $env
        $__log__ -i "Set $VARIABLE for $__profile__"
    done
}

while [ "$1" != "" ]; do
    case $1 in
    -n | --name)
        shift
        profile $1
        ;;

    set)
        shift
        setEnv $@
        exit
        ;;

    -h | --help)
        usage
        exit
        ;;

    *)
        usage
        exit 1
        ;;
    esac
    shift
done
